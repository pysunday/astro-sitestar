---
import clsx from 'clsx'
import { getI18n } from "@/i18n/index"

const { currentLocale } = Astro
const i18n = await getI18n(currentLocale, 'sitestar.about')
---
<section
  id="about"
  class={clsx(
    "relative h-full min-h-screen text-[1.4rem] z-[5] bg-[#fafafa] bg-fixed bg-no-repeat bg-right",
    "bg-[url('https://raw.githubusercontent.com/yagoestevez/fcc-portfolio/master/src/Images/Author_BG.jpg')]",
    "[clip-path:polygon(0_0,20%_1.5%,100%_0,100%_100%,80%_98.5%,0_100%)]",
    "sm:[clip-path:polygon(0_0,20%_2.5%,100%_0,100%_100%,80%_97.5%,0_100%)]",
    "lg:[clip-path:polygon(0_0,20%_3%,100%_0,100%_100%,80%_97%,0_100%)]",
    "xl:[clip-path:polygon(0_0,20%_4%,100%_0,100%_100%,80%_96%,0_100%)]",
    "2xl:[clip-path:polygon(0_0,20%_5%,100%_0,100%_100%,80%_95%,0_100%)]",
  )}
>
  <div class={clsx(
    "h-full min-h-screen max-w-[1400px] mx-auto",
    "pt-10 px-4 pb-8",
    "sm:pt-20 sm:px-8 sm:pb-16",
    "md:pt-40 md:px-16 md:pb-32",
    "xl:pt-60 xl:px-40 xl:pb-48",
  )}>
    <article class="grid grid-cols-4 gap-4 py-12">
      <div class="col-span-4 flex flex-col items-center">
        <h3 class="text-[2.4rem]">{i18n('who.name')}</h3>
        <p class="bg-[#f300b4] w-[150px] h-[2px] my-4 mx-0 p-0" />
      </div>
      {i18n('who.content', { returnObjects: true }).map(it =>
        <div class="col-span-4 mb-8 bg-white/70 p-8 text-justify">
          <h4 class="text-[1.6rem] text-center text-inherit pb-6">{it.title}</h4>
          {
            it.desc.map(text => <p class="pb-6 text-gray-600 leading-7">
              {text}
            </p>)
          }
        </div>
      )}
      <div class="col-span-4 flex flex-col items-center">
        <h3 class="text-[2.4rem]">{i18n('service.name')}</h3>
        <p class="bg-[#f300b4] w-[150px] h-[2px] my-4 mx-0 p-0" />
      </div>
      {i18n('service.content', { returnObjects: true }).map(it =>
        <div class="col-span-4 md:col-span-2 bg-white/70 p-8 text-justify">
          <h4 class="text-[1.6rem] text-center text-inherit pb-6">{it.title}</h4>
          {
            it.desc.map(text => <p class="pb-6 text-gray-600 leading-7">
              {text}
            </p>)
          }
          <p class="pb-6 text-gray-600 leading-7">
            <a href={it.url}>{it.goto}</a>
          </p>
        </div>
      )}
    </article>
  </div>
</section>
